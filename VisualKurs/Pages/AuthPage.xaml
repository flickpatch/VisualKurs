<Page x:Class="VisualKurs.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisualKurs.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock HorizontalAlignment="Center" Text="Авторизация" FontSize="18" />
            <TextBlock Text="Логин"/>
            <TextBox Name="tbLogin" Height="20"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox Name="pbPass"  Height="20"/>
            <TextBlock Name="tblAuthInfo" Margin="0,5" Visibility="Hidden" Text="Не корректно введены данные." Foreground="Red"/>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Name="btnAuth" Click="btnRefistClick" Content="Войти" Width="90" Margin="5,0"/>
                <Button Name="btnReg" Click="btnAuthClick" Content="Регстрация" Width="90" />
            </StackPanel>
            </StackPanel>
    </Grid>
</Page>
